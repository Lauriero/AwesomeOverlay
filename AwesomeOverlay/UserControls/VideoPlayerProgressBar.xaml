<UserControl x:Class="AwesomeOverlay.UserControls.VideoPlayerProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwesomeOverlay.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="307"
             Loaded="UserControl_Loaded">
    <DockPanel LastChildFill="False" Width="auto" Background="Transparent"
               MouseEnter="DockPanel_MouseEnter" MouseLeave="DockPanel_MouseLeave">
        <Border x:Name="ProgressBar" Width="0" Background="#A88A51" DockPanel.Dock="Left" 
                Height="3"/>
        <Ellipse Width="10" Height="10" Margin="0,0,0,0" Fill="#A88A51" DockPanel.Dock="Left"
                 MouseMove="Circle_MouseMove" x:Name="Circle" Visibility="Visible"/>
    </DockPanel>
</UserControl>

<UserControl x:Class="AwesomeOverlay.Views.UserServices.VKAuthorizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwesomeOverlay.Views.UserServices"
             xmlns:uci="clr-namespace:AwesomeOverlay.UserControls.Input"
             mc:Ignorable="d" 
             d:DesignHeight="231" d:DesignWidth="346">
    <StackPanel Orientation="Vertical">
        <uci:TextInputControl Placeholder="someone@example.com" x:Name="LoginTextInput"
                              FieldDescription="Email или телефон" Margin="43,0" />

        <uci:PasswordInputControl Placeholder="●●●●●●●●●●●●" x:Name="PasswordInput"
                                  FieldDescription="Пароль" Margin="43,72,43,0" />
    </StackPanel>
</UserControl>

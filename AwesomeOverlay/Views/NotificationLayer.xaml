<UserControl x:Class="AwesomeOverlay.Views.NotificationLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AwesomeOverlay.Views"
             xmlns:vm="clr-namespace:AwesomeOverlay.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">

    <ItemsControl d:DataContext="{d:DesignInstance {x:Type vm:MainWindowVM}}" HorizontalAlignment="Left"
                  ItemsSource="{Binding NotificationLayer.Notifications}" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
</UserControl>
